                    </div>*@
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> CORONA TRACKER</h4>
                    Last Refreshed : @ViewBag.lastRefreshed
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                State
                            </th>
                            <th>
                                Confirm Cases
                            </th>
                            <th>
                                Discharged
                            </th>
                            <th>
                                Death
                            </th>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var type in ViewBag.data)
                                    {
                                        <tr>
                                            <td>@type.loc</td>
                                            <td>@type.totalConfirmed</td>
                                            <td>@type.discharged</td>
                                            <td>@type.deaths</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


