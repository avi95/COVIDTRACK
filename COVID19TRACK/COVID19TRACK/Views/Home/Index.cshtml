            <div class="card card-stats">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5 col-md-4">
                            <div class="icon-big text-center icon-warning">
                                <i style="color:#FFEB3B !important" class="nc-icon nc-ambulance text-primary"></i>
                            </div>
                        </div>
                        <div class="col-7 col-md-8">
                            <div class="numbers">
                                <p class="card-category">TOTAL TESTED</p>
                                <p class="card-title">@ViewBag.testingData<p>
                            </div>
                        </div>
                    </div>
                </div>
