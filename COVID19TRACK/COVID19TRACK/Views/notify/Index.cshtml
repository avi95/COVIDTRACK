
@{
    ViewBag.Title = "Index";
}
<div style="padding-bottom:7px" class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Notifications (documents in PDF):</h4>
                    Last Refreshed : @ViewBag.lastRefreshed
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                Date
                            </th>
                            <th>
                                Title
                            </th>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var type in ViewBag.data)
                                    {
                                        <tr>
                                            <td>@type.date</td>
                                            <td><a target="_blank" href="@type.link">@type.title.Remove(0,10)</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
